
@model List<Trip>
@{
	var AllDisountedTrips = (List<Trip>)ViewBag.AllDiscountedTrip;
}


@section Scripts
{
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.7/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js"></script>
    <script src="@Url.Content("~/js/TripsPage_Js/FilterPartial_JS.js")"></script>
}





<!-- start banner Area -->
<section class="banner-area relative">
	<div class="overlay overlay-bg"></div>
	<div class="container">
		<div class="row fullscreen align-items-center justify-content-between">
			<div class="col-lg-6 col-md-6 banner-left">
				<h6 class="text-white">Away from monotonous life</h6>
				<h1 class="text-white">Magical Travel</h1>
				<p class="text-white">
					If you are looking at blank cassettes on the web, you may be very confused at the difference in price. You may see some for as low as $.17 each.
				</p>
				<a href="#" class="primary-btn text-uppercase">Get Started</a>
			</div>
		</div>
	</div>
</section>
<!-- End banner Area -->

<div class="video" style="position:relative;left:50%;transform:translateX(-50%);text-align: center;">
	<video width="1000" height="700" autoplay muted  loop controls>
		<source src="~/img/DiscoverEgypt.mp4" type="video/mp4">
		Your browser does not support the video tag.
</video>

	<a class="genric-btn primary text-uppercase" style="padding:20px" asp-controller="" asp-action=""><h1>Discover Egypt</h1></a>
</div>
@* Disounted Trip *@

<!-- Start blog Area -->
<section class="recent-blog-area section-gap">
	<div class="container">

		<div class="row d-flex justify-content-center">
			<div class="menu-content pb-60 col-lg-9">
				<div class="title text-center">
					<h1 class="mb-10">Explore Our Offers</h1>
					@* <p>With the exception of Nietzsche, no other madman has contributed so much to human sanity as has.</p> *@
				</div>
			</div>
		</div>
		<div class="active-recent-blog-carusel">
			@foreach (var trip in AllDisountedTrips)
			{
				<div class="custom-row">

					<div class="single-recent-blog-post item">
						<div class="thumb">
							<a asp-controller="" asp-action="">
								<img class="img-fluid" src="~/img/@trip.Images[0].ImageURL" alt="pic">
							</a>
						</div>
						<div class="details">
							<div class="tags">
								<ul>
									<li>
										@trip.Country.Name
									</li>
									@* <li>
								<a href="#">@trip.Name</a>
								</li>
								<li>
								<a href="#">@trip.Cost</a>
								</li> *@
								</ul>
							</div>
							<a asp-controller="" asp-action=""><h4 class="title">@trip.Name</h4></a>

							<h4 class="title">@trip.Cost EGP
								<span style="display:inline-block;float:right;margin-right:50px;color:red">@trip.Discount %</span>
							</h4>

							<p>
								@trip.Description
							</p>
							<h6 class="date">@trip.StartDate</h6>
							<a class="genric-btn primary text-uppercase" style="margin:13px 20px 10px 0" asp-area="" asp-controller="" asp-action="">Book Now</a>
							<a asp-area="" asp-controller="WishList" asp-action="AddToWishlist" asp-route-id="@trip.Id">
								<i style="color: #fed700;font-size:25px;border: 1px solid #c7bebe;padding:7px;" class="fa fa-heart"></i>
							</a>

						</div>
					</div>


					@* </div> *@
				</div>
			}
		</div>
	</div>
</section>
<!-- End recent-blog Area -->



