@using Microsoft.AspNetCore.Identity
@using Travelista.Areas.Identity.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@* <ul class="navbar-nav">*@
@if (SignInManager.IsSignedIn(User))
{
    <li @* class="nav-item" *@>
        <a class="nav-link " asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
    </li>
    <li @* class="nav-item" *@>
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit" class="nav-link btn btn-link" style="color: #ffffff; font-size: 14px; border: none; transition: color 0.3s;"
                onmouseover="this.style.color='#f8b600'" onmouseout="this.style.color='#ffffff'">Logout</button>
        </form>

    </li>
}
else
{
    <li @* class="nav-item" *@>
        <a asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li @* class="nav-item" *@>
        <a asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
@* </ul>
