@model Travelista.ViewModel.TripViewModel



@foreach (var trip in Model.trips)
{
	// Section One Card Trip Details
	//<div class="col-lg-3 ml-5 mr-5" onclick='location.href="@Url.Action("Details", "Trip")?tripId=@trip.Id";'>

	<div class="col-lg-3 ml-5 mr-5" onclick='location.href="@Url.Action("Index", "Home")";'>
		<div class="single-destinations">
				<div class="thumb">
					@if (trip.Images.Count > 0)
					{
						<img src="@trip.Images[0].ImageURL" alt="TripImage">
					}
				</div>
			<div class="details">
				<h4>@trip.Name</h4>
				<p>
					@trip?.Country?.Name
				</p>
				<ul class="package-list">
					<li class="d-flex justify-content-between align-items-center">
						<span>Duration</span>
						<span>@trip?.Duration Days</span>
					</li>
					<li class="d-flex justify-content-between align-items-center">
						<span>Date</span>
						<span>@trip?.StartDate</span>
					</li>
					<li class="d-flex justify-content-between align-items-center">
						<span>Available Seats</span>
						<span>@trip?.Capacity</span>
					</li>
					<li class="d-flex justify-content-between align-items-center">
						<span>Type</span>
						<span>@trip?.TripType?.Name</span>
					</li>
					<li class="d-flex justify-content-between align-items-center">
						<span>Price per person</span>
						<a href="#" class="price-btn">EGP @trip?.Cost</a>
					</li>

				</ul>
			</div>
		</div>

	</div>

}

